<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/admin/materials" class="row g-3">
            <div class="col-md-3">
                <label for="course" class="form-label">Course</label>
                <select class="form-select" id="course" name="course_id">
                    <option value="">All Courses</option>
                    {{#each courses}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col-md-3">
                <label for="type" class="form-label">Type</label>
                <select class="form-select" id="type" name="type">
                    <option value="">All Types</option>
                    <option value="pdf">PDF</option>
                    <option value="doc">Document</option>
                    <option value="video">Video</option>
                    <option value="image">Image</option>
                    <option value="link">Link</option>
                    <option value="quiz">Quiz</option>
                    <option value="assignment">Assignment</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="grade" class="form-label">Grade</label>
                <select class="form-select" id="grade" name="grade">
                    <option value="">All Grades</option>
                    <option value="9">Grade 9</option>
                    <option value="10">Grade 10</option>
                    <option value="11">Grade 11</option>
                    <option value="12">Grade 12</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="search" class="form-label">Search</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="search" name="search" placeholder="Title or description...">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Materials Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-table me-2"></i>
            Materials Library
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover data-table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" class="form-check-input">
                        </th>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Course</th>
                        <th>Owner</th>
                        <th>Grade</th>
                        <th>Size</th>
                        <th>Visibility</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each materials}}
                    <tr>
                        <td>
                            <input type="checkbox" class="form-check-input material-checkbox" value="{{id}}">
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="file-icon me-2">
                                    {{#if (eq type 'pdf')}}
                                        <i class="fas fa-file-pdf text-danger"></i>
                                    {{else if (eq type 'doc')}}
                                        <i class="fas fa-file-word text-primary"></i>
                                    {{else if (eq type 'video')}}
                                        <i class="fas fa-video text-info"></i>
                                    {{else if (eq type 'image')}}
                                        <i class="fas fa-image text-success"></i>
                                    {{else if (eq type 'link')}}
                                        <i class="fas fa-link text-warning"></i>
                                    {{else if (eq type 'quiz')}}
                                        <i class="fas fa-question-circle text-purple"></i>
                                    {{else if (eq type 'assignment')}}
                                        <i class="fas fa-tasks text-orange"></i>
                                    {{else}}
                                        <i class="fas fa-file text-secondary"></i>
                                    {{/if}}
                                </div>
                                <div>
                                    <strong>{{title}}</strong>
                                    {{#if description}}
                                    <br><small class="text-muted">{{truncate description 50}}</small>
                                    {{/if}}
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-secondary">{{type}}</span>
                        </td>
                        <td>
                            <span class="badge" style="background-color: {{course_color}};">{{course_name}}</span>
                        </td>
                        <td>{{owner_name}}</td>
                        <td>
                            {{#if grade}}
                                <span class="badge bg-info">Grade {{grade}}</span>
                            {{else}}
                                <span class="text-muted">All</span>
                            {{/if}}
                        </td>
                        <td>
                            {{#if file_size}}
                                <small>{{formatBytes file_size}}</small>
                            {{else}}
                                <span class="text-muted">-</span>
                            {{/if}}
                        </td>
                        <td>
                            {{#if is_public}}
                                <span class="badge bg-success">Public</span>
                            {{else}}
                                <span class="badge bg-warning">Private</span>
                            {{/if}}
                        </td>
                        <td>
                            <small>{{formatDate created_at}}</small>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                {{#if file_path}}
                                <a href="/uploads/{{file_path}}" class="btn btn-outline-primary btn-sm" 
                                   target="_blank" title="Download">
                                    <i class="fas fa-download"></i>
                                </a>
                                {{else if url}}
                                <a href="{{url}}" class="btn btn-outline-primary btn-sm" 
                                   target="_blank" title="Open Link">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                                {{/if}}
                                <button class="btn btn-outline-secondary btn-sm" 
                                        onclick="editMaterial({{id}})" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-outline-info btn-sm" 
                                        onclick="viewMaterialStats({{id}})" title="Statistics">
                                    <i class="fas fa-chart-bar"></i>
                                </button>
                                <button class="btn btn-outline-danger btn-sm" 
                                        onclick="deleteMaterial({{id}})" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Upload Material Modal -->
<div class="modal fade" id="uploadMaterialModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-upload me-2"></i>
                    Upload New Material
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="uploadMaterialForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="materialTitle" class="form-label">Title *</label>
                            <input type="text" class="form-control" id="materialTitle" name="title" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="materialType" class="form-label">Type *</label>
                            <select class="form-select" id="materialType" name="type" required>
                                <option value="">Select Type</option>
                                <option value="pdf">PDF Document</option>
                                <option value="doc">Word Document</option>
                                <option value="ppt">PowerPoint</option>
                                <option value="video">Video</option>
                                <option value="image">Image</option>
                                <option value="link">External Link</option>
                                <option value="quiz">Quiz</option>
                                <option value="assignment">Assignment</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="materialDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="materialDescription" name="description" rows="3"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="materialCourse" class="form-label">Course *</label>
                            <select class="form-select" id="materialCourse" name="course_id" required>
                                <option value="">Select Course</option>
                                {{#each courses}}
                                <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="materialGrade" class="form-label">Target Grade</label>
                            <select class="form-select" id="materialGrade" name="grade">
                                <option value="">All Grades</option>
                                <option value="9">Grade 9</option>
                                <option value="10">Grade 10</option>
                                <option value="11">Grade 11</option>
                                <option value="12">Grade 12</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="materialProgram" class="form-label">Program</label>
                            <select class="form-select" id="materialProgram" name="program">
                                <option value="">All Programs</option>
                                <option value="EST">EST</option>
                                <option value="ACT">ACT</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="materialPriority" class="form-label">Priority</label>
                            <select class="form-select" id="materialPriority" name="priority">
                                <option value="low">Low</option>
                                <option value="medium" selected>Medium</option>
                                <option value="high">High</option>
                            </select>
                        </div>
                    </div>

                    <!-- File Upload Section -->
                    <div id="fileUploadSection" class="mb-3">
                        <label for="materialFile" class="form-label">File *</label>
                        <input type="file" class="form-control" id="materialFile" name="file" 
                               accept=".pdf,.doc,.docx,.ppt,.pptx,.mp4,.avi,.mov,.jpg,.jpeg,.png,.gif">
                        <div class="form-text">
                            Supported formats: PDF, DOC, DOCX, PPT, PPTX, MP4, AVI, MOV, JPG, PNG, GIF (Max: 10MB)
                        </div>
                    </div>

                    <!-- URL Section (hidden by default) -->
                    <div id="urlSection" class="mb-3" style="display: none;">
                        <label for="materialUrl" class="form-label">URL *</label>
                        <input type="url" class="form-control" id="materialUrl" name="url" 
                               placeholder="https://example.com">
                    </div>

                    <div class="mb-3">
                        <label for="materialTags" class="form-label">Tags</label>
                        <input type="text" class="form-control" id="materialTags" name="tags" 
                               placeholder="biology, cell, photosynthesis (comma separated)">
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="materialPublic" name="is_public" checked>
                        <label class="form-check-label" for="materialPublic">
                            Make this material publicly accessible to students
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-upload me-1"></i>
                        Upload Material
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.file-icon {
    font-size: 1.2em;
}

.text-purple {
    color: #6f42c1 !important;
}

.text-orange {
    color: #fd7e14 !important;
}

.upload-progress {
    display: none;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle material type change
    document.getElementById('materialType').addEventListener('change', function() {
        const fileSection = document.getElementById('fileUploadSection');
        const urlSection = document.getElementById('urlSection');
        const fileInput = document.getElementById('materialFile');
        const urlInput = document.getElementById('materialUrl');

        if (this.value === 'link') {
            fileSection.style.display = 'none';
            urlSection.style.display = 'block';
            fileInput.required = false;
            urlInput.required = true;
        } else {
            fileSection.style.display = 'block';
            urlSection.style.display = 'none';
            fileInput.required = true;
            urlInput.required = false;
        }
    });

    // Select all functionality
    document.getElementById('selectAll').addEventListener('change', function() {
        const checkboxes = document.querySelectorAll('.material-checkbox');
        checkboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
    });

    // Upload form submission
    document.getElementById('uploadMaterialForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const submitBtn = this.querySelector('button[type="submit"]');
        const originalText = submitBtn.innerHTML;
        
        // Show loading state
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Uploading...';
        submitBtn.disabled = true;
        
        try {
            const response = await fetch('/api/materials', {
                method: 'POST',
                body: formData
            });
            
            const result = await response.json();
            
            if (response.ok) {
                alert('Material uploaded successfully!');
                location.reload();
            } else {
                alert('Error: ' + (result.error || 'Failed to upload material'));
            }
        } catch (error) {
            alert('Error: ' + error.message);
        } finally {
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
        }
    });
});

